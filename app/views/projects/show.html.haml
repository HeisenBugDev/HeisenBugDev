= render 'layouts/mod_header', {:project => @project}
.large-12.columns
  .row
    .large-3.columns
      %h3.blue-text Developers
      #developers
        = render 'developers'
      %a#add-dev Add dev
      #add-dev-form.hide
        = form_for @project, :remote => true do |f|
          = f.autocomplete_field :users, projects_autocomplete_user_name_path, :placeholder => 'Username', :value => ''
          = f.submit
      - latest_build = latest_builds(@project, 1)[0]
      - unless latest_build.nil?
        - latest_artifact = latest_build.artifacts.find_by_name(:universal).artifact
        %h3.blue-text Download
        = link_to latest_artifact.url, :class => 'button small split' do
          Latest (#{file_size(latest_artifact)})
          %span#more-downloads{"data-dropdown" => "drop"}
    .large-9.columns
      = simple_format(@project.description)
      #downloads.hide
        %hr
        %a{:id => 'downloads'}
        %h3.blue-text Downloads
        = render 'builds/downloads', project: @project
